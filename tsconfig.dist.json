{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "noEmit": false,
    "noEmitOnError": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "types": [
      "node"
    ],
    // Отключена в tsconfig.json из-за Jest
    "verbatimModuleSyntax": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/_*",
    "**/*.test.ts"
  ],
  "references": null
}
